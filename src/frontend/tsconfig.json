{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./*"
      ],
//      "@stores/*": [
//        "./stores/*"
//      ],
//      "@services/*": [
//        "./services/*"
//      ]
    }
  },
  "include": [
    "./*.ts",
    "./*.d.ts",
    "./*.tsx",
    "./*.vue"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}